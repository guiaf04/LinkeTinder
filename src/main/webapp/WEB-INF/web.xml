<?xml version="1.0" encoding="UTF-8"?>
<web-app xmlns="http://xmlns.jcp.org/xml/ns/javaee"
         xmlns:xsi="http://www.w3.org/2001/XMLSchema-instance"
         xsi:schemaLocation="http://xmlns.jcp.org/xml/ns/javaee
                             http://xmlns.jcp.org/xml/ns/javaee/web-app_3_1.xsd"
         version="3.1">

    <display-name xml:lang="pr-BR">Linketinder</display-name>

    <servlet>
        <servlet-name>TestController</servlet-name>
        <servlet-class>controller.TestController</servlet-class>
    </servlet>

    <servlet-mapping>
        <servlet-name>TestController</servlet-name>
        <url-pattern>/test</url-pattern>
    </servlet-mapping>

    <servlet>
        <servlet-name>CandidateController</servlet-name>
        <servlet-class>controller.CandidateController</servlet-class>
    </servlet>

    <servlet>
        <servlet-name>SkillsController</servlet-name>
        <servlet-class>controller.SkillsController</servlet-class>
    </servlet>

    <servlet-mapping>
        <servlet-name>SkillsController</servlet-name>
        <url-pattern>/competencia</url-pattern>
    </servlet-mapping>

    <servlet>
        <servlet-name>EmployeeController</servlet-name>
        <servlet-class>controller.EmployeeController</servlet-class>
    </servlet>

    <servlet-mapping>
        <servlet-name>EmployeeController</servlet-name>
        <url-pattern>/empresas</url-pattern>
    </servlet-mapping>

    <servlet>
        <servlet-name>VacancyController</servlet-name>
        <servlet-class>controller.VacancyController</servlet-class>
    </servlet>

    <servlet-mapping>
        <servlet-name>VacancyController</servlet-name>
        <url-pattern>/vagas</url-pattern>
    </servlet-mapping>

    <servlet-mapping>
        <servlet-name>VacancyController</servlet-name>
        <url-pattern>/vagas/*</url-pattern>
    </servlet-mapping>

</web-app>