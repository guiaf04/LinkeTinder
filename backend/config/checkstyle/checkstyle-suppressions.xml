<?xml version="1.0"?>
<!DOCTYPE suppressions PUBLIC
    "-//Checkstyle//DTD SuppressionFilter Configuration 1.2//EN"
    "https://checkstyle.org/dtds/suppressions_1_2.dtd">

<suppressions>
    <!-- Suprimir verificações de números mágicos em testes -->
    <suppress checks="MagicNumber" files=".*Test\.java"/>
    
    <!-- Suprimir verificações de design para extensão em DTOs -->
    <suppress checks="DesignForExtension" files=".*DTO\.java"/>
    
    <!-- Suprimir verificações de visibilidade em entidades JPA -->
    <suppress checks="VisibilityModifier" files=".*[/\\]model[/\\].*\.java"/>
    
    <!-- Suprimir verificações de parâmetros finais em controladores -->
    <suppress checks="FinalParameters" files=".*Controller\.java"/>
    
    <!-- Suprimir verificações de TODO comments temporariamente -->
    <suppress checks="TodoComment" files=".*"/>
    
    <!-- Suprimir verificações de Javadoc em classes de configuração -->
    <suppress checks="JavadocType" files=".*Config\.java"/>
    <suppress checks="JavadocMethod" files=".*Config\.java"/>

    <!-- Suprimir verificações de métodos longos em mapeadores -->
    <suppress checks="MethodLength" files=".*Mapper\.java"/>

    <!-- Suprimir verificações de parâmetros múltiplos em serviços -->
    <suppress checks="ParameterNumber" files=".*Service\.java"/>

    <!-- Suprimir verificações de campos ocultos em construtores JPA -->
    <suppress checks="HiddenField" files=".*[/\\]model[/\\].*\.java"/>

    <!-- Suprimir verificações em classes principais do Spring Boot -->
    <suppress checks="HideUtilityClassConstructor" files=".*Application\.java"/>

    <!-- Suprimir verificações de design em classes de teste -->
    <suppress checks="DesignForExtension" files=".*Test\.java"/>
    <suppress checks="FinalClass" files=".*Test\.java"/>
</suppressions>